<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Cloudares</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1>Click to play the video!</h1>

        <div class="video-wrapper">
            <!-- Video element hidden until play -->
            <video id="rickVideo" width="640" height="360" controls style="display:none;">
                <source src="/videos/rick.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>

            <!-- Thumbnail overlay -->
            <div id="thumbnail">
                <img src="/videos/thumbnail.jpg" alt="Click to play">
                <button id="playButton">â–¶ Play</button>
            </div>
        </div>
    </div>

    <script>
        const playButton = document.getElementById('playButton');
        const video = document.getElementById('rickVideo');
        const thumbnail = document.getElementById('thumbnail');

        playButton.addEventListener('click', () => {
            thumbnail.style.display = 'none'; // remove thumbnail
            video.style.display = 'block';    // show video
            video.play();                      // play with full audio
        });
    </script>
</body>
</html>
